<?xml version="1.0" encoding="UTF-8"?>
<project name="otsoCommons" default="dist">
	<property name="junit.formatter.type" value="xml" />
	<property name="testreportdir" value="build" />
	<property name="otso.restlet.commons.libs" location="../otsoRestletCommons/lib/" />
	<property name="otso.restlet.commons.jar" location="../otsoRestletCommons/dist/otsoRestletCommons-sources.jar" />
	<property name="otso.authn.libs" location="../otsoAuthentication/lib/" />
	<property name="otso.authn.jar" location="../otsoAuthentication/dist/otsoAuthentication-sources.jar" />

	<path id="project.class.path">
		<pathelement location="${otso.restlet.commons.jar}" />
		<pathelement location="${otso.authn.jar}" />
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="libs">
			<include name="*.jar" />
		</fileset>
	</path>
	
	<path id="project.class.path.test">
		<pathelement location="dist/otsoCommons-all.jar" />
		<path refid="project.class.path" />
	</path>

	<fail message="${otso.restlet.commons.libs} not found. Can not import restlet libraries">
		<condition>
			<not>
				<available file="${otso.restlet.commons.libs}" />
			</not>
		</condition>
	</fail>

	<fail message="${otso.restlet.commons.jar} not found. Run ant dist in that directory.">
		<condition>
			<not>
				<available file="${otso.restlet.commons.jar}" />
			</not>
		</condition>
	</fail>

	<fail message="${otso.authn.libs} not found. Can not import restlet libraries">
		<condition>
			<not>
				<available file="${otso.authn.libs}" />
			</not>
		</condition>
	</fail>

	<fail message="${otso.authn.jar} not found. Run ant dist in that directory.">
		<condition>
			<not>
				<available file="${otso.authn.jar}" />
			</not>
		</condition>
	</fail>

	<target name="javac" depends="clean">
		<mkdir dir="bin" />
		<mkdir dir="libs" />
		<copy todir="libs">
			<fileset dir="${otso.restlet.commons.libs}" />
			<fileset dir="${otso.authn.libs}" />
		</copy>
		<javac srcdir="src:test" destdir="bin" includes="**" debug="on" debuglevel="lines,vars,source" encoding="utf-8">
			<classpath refid="project.class.path" />
		</javac>
	</target>

	<target name="dist" depends="javac">
		<javac srcdir="src" destdir="bin" includes="**" debug="on" debuglevel="lines,vars,source" encoding="utf-8">
			<classpath refid="project.class.path" />
		</javac>
		
		<mkdir dir="dist" />
		
		<pathconvert property="mf.classpath" pathsep=" ">
			<path refid="project.class.path" />
			<mapper>
				<chainedmapper>
					<flattenmapper />
					<globmapper from="*.jar" to="lib/*.jar" />
				</chainedmapper>
			</mapper>
		</pathconvert>
		
		<jar destfile="dist/otsoCommons-dist.jar" basedir="bin">
			<zipgroupfileset dir="../otsoRestletCommons/dist" includes="otsoRestletCommons-dist.jar" excludes="" />
			<zipgroupfileset dir="../otsoAuthentication/dist" includes="otsoAuthentication-dist.jar" excludes="" />
		</jar>
		
		<copy todir="bin">
			<fileset dir="src" />
		</copy>
		<jar destfile="dist/otsoCommons-sources.jar" basedir="bin" />
		<jar destfile="dist/otsoCommons-all.jar" filesetmanifest="skip">
			<zipgroupfileset dir="bin" includes="*.class" />
			<zipgroupfileset dir="libs" includes="*.jar" excludes="" />
			<zipgroupfileset dir="lib" includes="*.jar" excludes="" />
			<zipgroupfileset dir="../otsoRestletCommons/dist" includes="otsoRestletCommons-all.jar" excludes="" />
			<zipgroupfileset dir="../otsoAuthentication/dist" includes="otsoAuthentication-all.jar" excludes="" />
			<!-- This must be the last one to overrite the META-INF/services with the proper Restlet converters -->
			<zipgroupfileset dir="dist" includes="otsoCommons-sources.jar" excludes="" />
			<manifest>
				<attribute name="Class-Path" value="${mf.classpath}" />
			</manifest>
		</jar>
	</target>
	
	<target name="test" depends="dist" description="Generates the jars">
		<mkdir dir="${testreportdir}" />
		<javac srcdir="test" destdir="${testreportdir}">
			<classpath refid="project.class.path.test" />
		</javac>
		<junit failureproperty="test.failure" printSummary="yes" fork="true" haltonerror="true" showoutput="true">
			<classpath>
				<pathelement path="bin" />
				<path refid="project.class.path" />
			</classpath>
			<batchtest todir="${testreportdir}">
				<fileset dir="test">
					<include name="**/**Test.java" />
				</fileset>
			</batchtest>
			<formatter type="${junit.formatter.type}" />
			<formatter usefile="false" type="plain" />
		</junit>
		<fail if="test.failure" message="Tests failed..." />
	</target>

	<target name="clean">
		<delete dir="bin/otsopack" failonerror="false" />
		<delete dir="dist" failonerror="false" />
		<delete dir="libs" failonerror="false" />
	</target>
</project>